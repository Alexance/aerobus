{
  "name": "aerobus",
  "description": "Fluent in-memory message bus",
  "keywords": "message bus, pubsub, fluent, ES2015",
  "author": "Denis Vlassenko <denis_vlassenko@epam.com>",
  "contributors": [
    "Dzmitry Rybalko <dzmitry_rybalko@epam.com>",
    "Alexander Kuchur <Alexandr_Kuchur@epam.com>"
  ],
  "license": "MIT",
  "version": "0.5.0",
  "main": "index.js",
  "jsnext:main": "build/modern/index.js",
  "homepage": "https://github.com/vladen/aerobus",
  "repository": {
    "type": "git",
    "url": "https://github.com/vladen/aerobus.git"
  },
  "scripts": {
    "all": "npm run lint && npm run build && npm run test && npm run document",
    "babel": "npm run babel-library && npm run babel-tests",
    "babel-library": "node_modules/.bin/babel build/modern/aerobus.js --out-file build/legacy/aerobus.js --presets es2015 --plugins add-module-exports,transform-es2015-modules-umd",
    "babel-tests": "node_modules/.bin/babel build/modern/aerobus.tests.js --out-file build/legacy/aerobus.tests.js --presets es2015 --plugins add-module-exports,transform-es2015-modules-umd",
    "build": "npm run rollup && npm run babel && npm run uglify",
    "document": "npm run document-library && npm run document-specifications",
    "document-library": "node_modules/.bin/jsdoc2md build/modern/aerobus.js > documentation/readme.md --global-index-format dl --member-index-format grouped --module-index-format grouped --param-list-format list --property-list-format list --sort-by name",
    "document-specifications": "node_modules/.bin/mocha build/legacy/aerobus.tests.js --reporter markdown > specifications/readme.md",
    "lint": "npm run lint-library && npm run lint-tests",
    "lint-library": "node_modules/.bin/eslint source/*.js",
    "lint-tests": "node_modules/.bin/eslint source/tests/*.js",
    "rollup": "npm run rollup-library && npm run rollup-library-umd && npm run rollup-tests && npm run rollup-tests-umd",
    "rollup-library": "node_modules/.bin/rollup --input source/aerobus.js --output build/modern/aerobus.js",
    "rollup-library-umd": "node_modules/.bin/rollup --format umd --input source/aerobus.js --name aerobus --output build/modern/aerobus.umd.js",
    "rollup-tests": "node_modules/.bin/rollup --external aerobus,chai --globals aerobus:aerobus,chai:chai --input tests/aerobus.js --output build/modern/aerobus.tests.js",
    "rollup-tests-umd": "node_modules/.bin/rollup --external aerobus,chai --format umd --globals aerobus:aerobus,chai:chai --input tests/aerobus.js --name tests --output build/modern/aerobus.tests.umd.js",
    "test": "npm run test-legacy",
    "test-legacy": "node_modules/.bin/mocha --bail --check-leaks --colors --prof build/legacy/aerobus.tests.js",
    "test-modern": "node_modules/.bin/mocha --bail --check-leaks --colors --prof build/modern/aerobus.tests.js",
    "uglify": "node_modules/.bin/uglifyjs build/legacy/aerobus.js --compress --mangle --output build/legacy/aerobus.min.js"
  },
  "pre-commit": {
    "precommit.colors": true,
    "precommit.silent": false,
    "run": [ "all" ]
  },
  "dependencies": {
    "core-js": "^1.2.6"
  },
  "devDependencies": {
    "babel-cli": "^6.2.0",
    "babel-core": "^6.2.1",
    "babel-plugin-add-module-exports": "^0.1.1",
    "babel-plugin-transform-es2015-modules-umd": "^6.1.18",
    "babel-preset-es2015": "^6.1.18",
    "chai": "^3.4.1",
    "eslint": "^1.10.1",
    "jsdoc-to-markdown": "^1.2.1",
    "mocha": "^2.3.4",
    "pre-commit": "^1.1.2",
    "rollup": "^0.24.1",
    "uglify-js": "^2.6.1"
  }
}
