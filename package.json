{
  "name": "aerobus",
  "version": "0.1.0",
  "description": "Featured local message bus",
  "main": "index.js",  
  "keywords": [
    "pubsub"
  ],
  "author": "denis_vlassenko@epam.com",
  "license": "MIT",
  "scripts": {   
    "all": "npm run build && npm run lint && npm run test",
    "build": "npm run compile",
    "compile": "npm run compile-flow && npm run compile-flow-compat && npm run compile-test && npm run compile-test-compat",
    "compile-flow": "node_modules/.bin/babel src/aerobus.es6 --out-file lib/aerobus.es6.js",
    "compile-flow-compat": "node_modules/.bin/babel src/aerobus.es6 --out-file lib/aerobus.js --presets es2015",
    "compile-test": "node_modules/.bin/babel src/aerobus.test.es6 --out-file lib/aerobus.es6.test.js",
    "compile-test-compat": "node_modules/.bin/babel src/aerobus.test.es6 --out-file lib/aerobus.test.js --presets es2015",
    "lint": "npm run lint-flow && npm run lint-test",
    "lint-flow": "node_modules/.bin/eslint src/Bus.es6",
    "lint-test": "node_modules/.bin/eslint src/aerobus.test.es6 --global aerobus,assert,describe,it",
    "test": "node_modules/.bin/mocha lib/aerobus.test.js -r core-js"
  },
  "devDependencies": {
    "benchmark": "^1.0.0",
    "chai": "^3.3.0",
    "eslint": "^1.6.0",
    "gulp": "^3.9.0",
    "gulp-eslint": "^1.0.0",
    "gulp-mocha": "^2.1.3",
    "mocha": "^2.3.3",
    "core-js": "^1.2.6",
    "babel-core": "^6.1.18",
    "babel-polyfill": "^6.1.18",
    "babel-preset-es2015": "^6.1.18",
    "babel-plugin-transform-es2015-modules-umd": "^6.1.18",
    "babel-plugin-transform-export-extensions": "^6.1.18"
  }
}