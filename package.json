{
  "name": "aerobus",
  "description": "Fluent in-memory message bus",
  "keywords": "message bus, pubsub, fluent, ES2015",
  "license": "MIT",
  "version": "0.5.4",
  "main": "./index.js",
  "jsnext:main": "./build/modern/aerobus.js",
  "files": [
    "index.js",
    "build"
  ],
  "homepage": "https://github.com/vladen/aerobus",
  "repository": {
    "type": "git",
    "url": "https://github.com/vladen/aerobus.git"
  },
  "author": "Denis Vlassenko <denis_vlassenko@epam.com>",
  "contributors": [
    "Dzmitry Rybalko <dzmitry_rybalko@epam.com>",
    "Alexander Kuchur <Alexandr_Kuchur@epam.com>"
  ],
  "scripts": {
    "all": "npm run lint && npm run build && npm run test && npm run document",
    "babel": "npm run babel:library && npm run babel:tests",
    "babel:library": "babel build/es2015/aerobus.js --out-file build/legacy/aerobus.js --presets es2015 --plugins add-module-exports,transform-es2015-modules-umd",
    "babel:tests": "babel build/es2015/aerobus.tests.js --out-file build/legacy/aerobus.tests.js --presets es2015 --plugins add-module-exports,transform-es2015-modules-umd",
    "build": "npm run rollup && npm run babel && npm run uglifyjs",
    "codeclimate": "codeclimate-test-reporter < coverage/lcov.info",
    "document": "npm run jsdoc2md && npm run mocha:specs",
    "isparta": "babel-node ./node_modules/isparta/bin/isparta cover ./node_modules/mocha/bin/_mocha -- build/coverage.js --reporter dot",
    "jsdoc2md": "jsdoc2md build/modern/aerobus.js > documentation/readme.md --global-index-format dl --member-index-format grouped --module-index-format grouped --param-list-format list --property-list-format list --sort-by name",
    "lint": "npm run lint:library && npm run lint:tests",
    "lint:library": "eslint source/*.js",
    "lint:tests": "eslint source/tests/*.js",
    "mocha:specs": "mocha build/tests.js --reporter markdown > specifications/readme.md",
    "mocha:tests": "mocha --bail --check-leaks --colors --prof build/tests.js",
    "rollup": "npm run rollup:library && npm run rollup:library:modern && npm run rollup:tests && npm run rollup:tests:modern",
    "rollup:library": "rollup --input source/aerobus.js --name tests --output build/es2015/aerobus.js",
    "rollup:library:modern": "rollup --format umd --input source/aerobus.js --name aerobus --output build/modern/aerobus.js",
    "rollup:tests": "rollup --input tests/aerobus.js --name tests --output build/es2015/aerobus.tests.js",
    "rollup:tests:modern": "rollup --format umd --input tests/aerobus.js --name aerobusTests --output build/modern/aerobus.tests.js",
    "test": "npm run mocha:tests && npm run isparta",
    "uglifyjs": "uglifyjs build/legacy/aerobus.js --compress --mangle --output build/legacy/aerobus.min.js"
  },
  "pre-commit": {
    "precommit.colors": true,
    "precommit.silent": false,
    "run": [
      "build",
      "document"
    ]
  },
  "dependencies": {
    "core-js": "^2.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.4.0",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-es2015-modules-umd": "^6.4.3",
    "babel-preset-es2015": "^6.3.13",
    "chai": "^3.4.1",
    "codeclimate-test-reporter": "^0.3.0",
    "eslint": "^1.10.3",
    "isparta": "^4.0.0",
    "jsdoc-to-markdown": "^1.3.3",
    "mocha": "^2.3.4",
    "pre-commit": "^1.1.2",
    "rollup": "^0.25.0",
    "uglify-js": "^2.6.1"
  }
}
